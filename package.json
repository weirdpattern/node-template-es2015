{
  "version": "0.0.1",
  "license": "MIT",

  "name": "package.name",
  "description": "package.description",
  "author": "package.author",

  "main": "index.js",

  "engines": {
    "node": "^4.4.3"
  },

  "dependencies": {
    "babel-core": "^6.9.1",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0"
  },

  "devDependencies": {
    "glob": "*",
    "snazzy": "*",
    "tape": "*",
    "tap-spec": "*",
    "semistandard": "*",
    "babel-eslint": "*",
    "babel-istanbul": "*",
    "babel-cli": "*",
    "coveralls": "*"
  },

  "scripts": {
    "lint": "semistandard --verbose | snazzy",
    "specs": "babel-node node_modules/.bin/tape ./spec/index.js | tap-spec",
    "test": "npm run lint && npm run specs",
    "coverage": "babel-node node_modules/.bin/babel-istanbul cover -x spec/*.js tape -- spec/index.js",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "review-coverage": "open ./coverage/lcov-report/index.html"
  },

  "semistandard": {
    "parser": "babel-eslint"
  }
}